@model Memberships.Areas.Admin.Models.SmallButtonModel
@using Memberships.Areas.Admin.Models

<td style="width:150px">
    <div class="btn-group" role="group">
        @Html.Partial("_SmallButtonPartial", new SmallButtonModel
   {
       Action="Edit",
       ButtonType="btn-primary",
       Glyph="pencil",
       Text="Edit button",
       Id=Model.Id,
       ItemId=Model.ItemId,
       ProductId=Model.ProductId,
       UserId=Model.UserId,
       SubscriptionId=Model.SubscriptionId
   })

        @if (Model.UserId == null || Model.UserId == string.Empty)
        {
            @Html.Partial("_SmallButtonPartial", new SmallButtonModel
       {
           Action="Details",
           ButtonType="btn-success",
           Glyph="list",
           Text="Details button",
           Id=Model.Id,
           ItemId=Model.ItemId,
           ProductId=Model.ProductId,
           UserId = Model.UserId,
           SubscriptionId = Model.SubscriptionId
       })
        }

        @if (Model.UserId != null && Model.UserId != string.Empty)
        {
            @Html.Partial("_SmallButtonPartial", new SmallButtonModel
       {
           Action = "Subscriptions",
           ButtonType = "btn-info",
           Glyph = "list",
           Text = "Subscriptions",
           Id = Model.Id,
           ItemId = Model.ItemId,
           ProductId = Model.ProductId,
           UserId = Model.UserId,
           SubscriptionId = Model.SubscriptionId
       })
        }
            @Html.Partial("_SmallButtonPartial", new SmallButtonModel
       {
           Action="Delete",
           ButtonType="btn-danger",
           Glyph="trash",
           Text="Delete button",
           Id=Model.Id,
           ItemId=Model.ItemId,
           ProductId=Model.ProductId,
           UserId = Model.UserId,
           SubscriptionId = Model.SubscriptionId
       })
        </div>
</td>
